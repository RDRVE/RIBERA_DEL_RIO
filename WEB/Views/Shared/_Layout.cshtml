<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ribera del Rio</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-business">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/Img/logordr.PNG" height="30" alt="" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" href="/">Inicio</a>
                    <a class="nav-item nav-link" href="#">Restaurant</a>
                    <a class="nav-item nav-link" href="#">Full Day</a>
                    <a class="nav-item nav-link" href="#">Campamento</a>
                    <a class="nav-item nav-link" href="#">Club Resort</a>
                    @Html.ActionLink("Paquetes", "SwapPart", null, new { @class = "nav-item nav-link" })
                </div>
            </div>
        </div>
    </nav>
    <div class="bg-light">
        @RenderBody()
        <div class="container pb-3">
            <hr />
            <footer>
                <div class="row">
                    <div class="col-sm-6">
                        <p>Avenida Nueva Toledo KM 29.5 | Carretera Lima - Cieneguilla</p>
                        <p>Comunicate al: (01) 785-0253</p>
                        <p>informesyreservas@cieneguillariberadelrio.com</p>
                        <p><a href="#">Libro de reclamaciones</a></p>
                    </div>
                    <div class="col-sm-6">
                        <p>&copy; @DateTime.Now.Year - Ribera del Rio</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
